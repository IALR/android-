<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient_primary">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium">

            <!-- Robot Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/corner_radius_large"
                app:cardElevation="@dimen/elevation_high"
                android:layout_marginBottom="@dimen/margin_medium">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_medium"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/icon_large"
                        android:layout_height="@dimen/icon_large"
                        android:src="@drawable/ic_robot_full"
                        android:contentDescription="@string/robot_icon"
                        android:layout_marginEnd="@dimen/margin_medium" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/robotNameText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/robot_name"
                            android:textAppearance="@style/TextAppearance.Title"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="@dimen/margin_tiny" />

                        <TextView
                            android:id="@+id/connectionStatusText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/status_disconnected"
                            android:textAppearance="@style/TextAppearance.Caption"
                            android:textColor="@color/status_disconnected" />

                        <TextView
                            android:id="@+id/commandStatusText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Command: (none yet)"
                            android:textAppearance="@style/TextAppearance.Caption"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="@dimen/margin_tiny" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/connectionStatusIcon"
                        android:layout_width="@dimen/icon_medium"
                        android:layout_height="@dimen/icon_medium"
                        android:src="@drawable/ic_disconnected"
                        android:contentDescription="@string/connection_status" />
                </LinearLayout>

                <TextView
                    android:id="@+id/receiveLogText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.Caption"
                    android:textColor="@color/text_secondary"
                    android:paddingTop="@dimen/padding_small"
                    android:maxLines="6" />
            </androidx.cardview.widget.CardView>

            <!-- Movement Controls Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/corner_radius_large"
                app:cardElevation="@dimen/elevation_high"
                android:layout_marginBottom="@dimen/margin_medium">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_large">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/movement_controls"
                        android:textAppearance="@style/TextAppearance.Headline"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="@dimen/margin_medium" />

                    <!-- Direction Controls -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <!-- Forward Button -->
                        <Button
                            android:id="@+id/forwardButton"
                            android:layout_width="@dimen/control_button_size"
                            android:layout_height="@dimen/control_button_size"
                            android:layout_marginBottom="@dimen/margin_small"
                            android:background="@drawable/bg_control_forward"
                            android:drawableTop="@drawable/ic_arrow_up"
                            android:text="@string/forward"
                            android:textAppearance="@style/TextAppearance.Button"
                            android:textColor="@android:color/white"
                            android:elevation="@dimen/elevation_medium" />

                        <!-- Left, Stop, Right Row -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="@dimen/margin_small">

                            <Button
                                android:id="@+id/leftButton"
                                android:layout_width="@dimen/control_button_size"
                                android:layout_height="@dimen/control_button_size"
                                android:layout_marginEnd="@dimen/margin_small"
                                android:background="@drawable/bg_control_turn"
                                android:drawableTop="@drawable/ic_arrow_left"
                                android:text="@string/left"
                                android:textAppearance="@style/TextAppearance.Button"
                                android:textColor="@android:color/white"
                                android:elevation="@dimen/elevation_medium" />

                            <Button
                                android:id="@+id/stopButton"
                                android:layout_width="@dimen/control_button_size"
                                android:layout_height="@dimen/control_button_size"
                                android:layout_marginStart="@dimen/margin_small"
                                android:layout_marginEnd="@dimen/margin_small"
                                android:background="@drawable/bg_control_stop"
                                android:text="@string/stop"
                                android:textAppearance="@style/TextAppearance.Headline"
                                android:textColor="@android:color/white"
                                android:textStyle="bold"
                                android:elevation="@dimen/elevation_high" />

                            <Button
                                android:id="@+id/rightButton"
                                android:layout_width="@dimen/control_button_size"
                                android:layout_height="@dimen/control_button_size"
                                android:layout_marginStart="@dimen/margin_small"
                                android:background="@drawable/bg_control_turn"
                                android:drawableTop="@drawable/ic_arrow_right"
                                android:text="@string/right"
                                android:textAppearance="@style/TextAppearance.Button"
                                android:textColor="@android:color/white"
                                android:elevation="@dimen/elevation_medium" />
                        </LinearLayout>

                        <!-- Backward Button -->
                        <Button
                            android:id="@+id/backwardButton"
                            android:layout_width="@dimen/control_button_size"
                            android:layout_height="@dimen/control_button_size"
                            android:background="@drawable/bg_control_backward"
                            android:drawableTop="@drawable/ic_arrow_down"
                            android:text="@string/backward"
                            android:textAppearance="@style/TextAppearance.Button"
                            android:textColor="@android:color/white"
                            android:elevation="@dimen/elevation_medium" />

                        <Button
                            android:id="@+id/testButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_medium"
                            android:text="@string/test_servos"
                            android:textAppearance="@style/TextAppearance.Button"
                            android:textColor="@android:color/white"
                            android:background="@color/accent_primary"
                            android:elevation="@dimen/elevation_medium" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Speed Control Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/corner_radius_large"
                app:cardElevation="@dimen/elevation_high"
                android:layout_marginBottom="@dimen/margin_medium">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_large">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/margin_small">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/speed_control"
                            android:textAppearance="@style/TextAppearance.Headline"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:id="@+id/speedValueText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50"
                            android:textAppearance="@style/TextAppearance.Title"
                            android:textColor="@color/robot_blue_primary"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <SeekBar
                        android:id="@+id/speedSlider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:progress="50"
                        android:progressTint="@color/robot_blue_primary"
                        android:thumbTint="@color/robot_blue_primary" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Servo Controls Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/corner_radius_large"
                app:cardElevation="@dimen/elevation_high">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_large">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/servo_controls"
                        android:textAppearance="@style/TextAppearance.Headline"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="@dimen/margin_medium" />

                    <!-- Servo A -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/margin_small">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/servo_a"
                            android:textAppearance="@style/TextAppearance.Subtitle"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:id="@+id/servoAValueText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="90°"
                            android:textAppearance="@style/TextAppearance.Subtitle"
                            android:textColor="@color/tech_orange"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <SeekBar
                        android:id="@+id/servoASlider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="180"
                        android:progress="90"
                        android:layout_marginBottom="@dimen/margin_large"
                        android:progressTint="@color/tech_orange"
                        android:thumbTint="@color/tech_orange" />

                    <!-- Servo B -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/margin_small">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/servo_b"
                            android:textAppearance="@style/TextAppearance.Subtitle"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:id="@+id/servoBValueText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="90°"
                            android:textAppearance="@style/TextAppearance.Subtitle"
                            android:textColor="@color/tech_orange"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <SeekBar
                        android:id="@+id/servoBSlider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="180"
                        android:progress="90"
                        android:progressTint="@color/tech_orange"
                        android:thumbTint="@color/tech_orange" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
