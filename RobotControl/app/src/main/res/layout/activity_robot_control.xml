<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_large">

        <!-- Header / Status -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            app:cardCornerRadius="@dimen/corner_radius_medium"
            app:cardElevation="@dimen/elevation_low"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/robot_control_title"
                    android:textAppearance="@style/TextAppearance.Headline" />

                <TextView
                    android:id="@+id/tvConnectionStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_tiny"
                    android:text="@string/status_disconnected_label"
                    android:textAppearance="@style/TextAppearance.Caption" />

                <TextView
                    android:id="@+id/tvCommandStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_tiny"
                    android:text="@string/command_none"
                    android:textAppearance="@style/TextAppearance.Caption" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- WiFi Connection Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            app:cardCornerRadius="@dimen/corner_radius_medium"
            app:cardElevation="@dimen/elevation_low"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/wifi_connection"
                    android:textAppearance="@style/TextAppearance.Title"
                    android:textColor="@color/accent_primary"
                    android:layout_marginBottom="@dimen/margin_small" />

                <Button
                    android:id="@+id/btnScanWiFi"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:text="@string/wifi_scan_for_robots"
                    android:textAppearance="@style/TextAppearance.Button"
                    android:textAllCaps="false"
                    android:background="@color/accent_primary"
                    android:layout_marginBottom="@dimen/margin_small" />

                <Spinner
                    android:id="@+id/spinnerNetworks"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginBottom="@dimen/margin_small" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnConnectToRobot"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height"
                        android:layout_weight="1"
                        android:text="Connect"
                        android:textAppearance="@style/TextAppearance.Button"
                        android:textAllCaps="false"
                        android:background="@color/status_connected"
                        android:layout_marginEnd="@dimen/margin_small" />

                    <Button
                        android:id="@+id/btnDisconnect"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height"
                        android:layout_weight="1"
                        android:text="Disconnect"
                        android:textAppearance="@style/TextAppearance.Body"
                        android:textAllCaps="false"
                        android:textColor="@color/text_primary"
                        android:background="@color/button_secondary" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Motor Control Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            app:cardCornerRadius="@dimen/corner_radius_medium"
            app:cardElevation="@dimen/elevation_low"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/motor_control"
                    android:textAppearance="@style/TextAppearance.Title"
                    android:textColor="@color/accent_primary"
                    android:layout_marginBottom="@dimen/margin_small" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alignmentMode="alignMargins"
                    android:useDefaultMargins="true"
                    android:columnCount="3"
                    android:rowCount="3">

                    <Space
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/control_button_size"
                        android:layout_columnWeight="1" />

                    <Button
                        android:id="@+id/btnForward"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/control_button_size"
                        android:layout_columnWeight="1"
                        android:text="↑"
                        android:textAppearance="@style/TextAppearance.Button"
                        android:textAllCaps="false"
                        android:background="@color/control_forward" />

                    <Space
                        android:layout_row="0"
                        android:layout_column="2"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/control_button_size"
                        android:layout_columnWeight="1" />

                    <Button
                        android:id="@+id/btnLeft"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/control_button_size"
                        android:layout_columnWeight="1"
                        android:text="←"
                        android:textAppearance="@style/TextAppearance.Button"
                        android:textAllCaps="false"
                        android:background="@color/control_left" />

                    <Button
                        android:id="@+id/btnStop"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/control_button_size"
                        android:layout_columnWeight="1"
                        android:text="Stop"
                        android:textAppearance="@style/TextAppearance.Button"
                        android:textAllCaps="false"
                        android:background="@color/control_stop" />

                    <Button
                        android:id="@+id/btnRight"
                        android:layout_row="1"
                        android:layout_column="2"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/control_button_size"
                        android:layout_columnWeight="1"
                        android:text="→"
                        android:textAppearance="@style/TextAppearance.Button"
                        android:textAllCaps="false"
                        android:background="@color/control_right" />

                    <Space
                        android:layout_row="2"
                        android:layout_column="0"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/control_button_size"
                        android:layout_columnWeight="1" />

                    <Button
                        android:id="@+id/btnBackward"
                        android:layout_row="2"
                        android:layout_column="1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/control_button_size"
                        android:layout_columnWeight="1"
                        android:text="↓"
                        android:textAppearance="@style/TextAppearance.Button"
                        android:textAllCaps="false"
                        android:background="@color/control_backward" />

                    <Space
                        android:layout_row="2"
                        android:layout_column="2"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/control_button_size"
                        android:layout_columnWeight="1" />

                </GridLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Servo Control Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            app:cardCornerRadius="@dimen/corner_radius_medium"
            app:cardElevation="@dimen/elevation_low"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/servo_control"
                    android:textAppearance="@style/TextAppearance.Title"
                    android:textColor="@color/accent_primary"
                    android:layout_marginBottom="@dimen/margin_small" />

                <!-- Servo 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/margin_medium">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/margin_small">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Servo 1"
                            android:textAppearance="@style/TextAppearance.Body" />

                        <TextView
                            android:id="@+id/tvServo1Value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="90°"
                            android:textAppearance="@style/TextAppearance.Subtitle"
                            android:textColor="@color/accent_primary"
                            android:textStyle="bold"
                            android:fontFamily="monospace" />
                    </LinearLayout>

                    <SeekBar
                        android:id="@+id/sliderServo1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:min="0"
                        android:max="180"
                        android:progress="90" />
                </LinearLayout>

                <!-- Servo 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/margin_medium">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/margin_small">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Servo 2"
                            android:textAppearance="@style/TextAppearance.Body" />

                        <TextView
                            android:id="@+id/tvServo2Value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="90°"
                            android:textAppearance="@style/TextAppearance.Subtitle"
                            android:textColor="@color/accent_primary"
                            android:textStyle="bold"
                            android:fontFamily="monospace" />
                    </LinearLayout>

                    <SeekBar
                        android:id="@+id/sliderServo2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:min="0"
                        android:max="180"
                        android:progress="90" />
                </LinearLayout>

                <!-- Servo 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/margin_small">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Servo 3"
                            android:textAppearance="@style/TextAppearance.Body" />

                        <TextView
                            android:id="@+id/tvServo3Value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="90°"
                            android:textAppearance="@style/TextAppearance.Subtitle"
                            android:textColor="@color/accent_primary"
                            android:textStyle="bold"
                            android:fontFamily="monospace" />
                    </LinearLayout>

                    <SeekBar
                        android:id="@+id/sliderServo3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:min="0"
                        android:max="180"
                        android:progress="90" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
