<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ¤– Robot WiFi Control"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvConnectionStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Disconnected"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvCommandStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Command: (none yet)"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="24dp"/>

        <!-- WiFi Connection Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="WiFi Connection"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/accent_primary"
                    android:layout_marginBottom="12dp"/>

                <Button
                    android:id="@+id/btnScanWiFi"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="ðŸ” Scan for Robots"
                    android:textColor="@color/white"
                    android:background="@color/accent_primary"
                    android:layout_marginBottom="10dp"/>

                <Spinner
                    android:id="@+id/spinnerNetworks"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="10dp"/>

                <Button
                    android:id="@+id/btnConnectToRobot"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="âœ“ Connect"
                    android:textColor="@color/white"
                    android:background="@color/status_connected"
                    android:layout_marginBottom="10dp"/>

                <Button
                    android:id="@+id/btnDisconnect"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="âœ• Disconnect"
                    android:textColor="@color/text_primary"
                    android:background="@color/button_secondary"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Motor Control Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âš¡ Motor Control"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/accent_primary"
                    android:layout_marginBottom="16dp"/>

                <!-- D-Pad Layout -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:rowCount="3"
                    android:layout_gravity="center">

                    <!-- Empty Top-Left -->
                    <View
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_width="0dp"
                        android:layout_height="60dp"/>

                    <!-- Forward Button -->
                    <Button
                        android:id="@+id/btnForward"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:text="â†‘ FWD"
                        android:textColor="@color/white"
                        android:background="@color/accent_primary"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_margin="5dp"/>

                    <!-- Empty Top-Right -->
                    <View
                        android:layout_row="0"
                        android:layout_column="2"
                        android:layout_width="0dp"
                        android:layout_height="60dp"/>

                    <!-- Left Button -->
                    <Button
                        android:id="@+id/btnLeft"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:text="â† LFT"
                        android:textColor="@color/white"
                        android:background="@color/accent_primary"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_margin="5dp"/>

                    <!-- Stop Button -->
                    <Button
                        android:id="@+id/btnStop"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:text="âŠ™ STP"
                        android:textColor="@color/white"
                        android:background="@color/error"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_margin="5dp"/>

                    <!-- Right Button -->
                    <Button
                        android:id="@+id/btnRight"
                        android:layout_row="1"
                        android:layout_column="2"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:text="RGT â†’"
                        android:textColor="@color/white"
                        android:background="@color/accent_primary"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_margin="5dp"/>

                    <!-- Empty Bottom-Left -->
                    <View
                        android:layout_row="2"
                        android:layout_column="0"
                        android:layout_width="0dp"
                        android:layout_height="60dp"/>

                    <!-- Backward Button -->
                    <Button
                        android:id="@+id/btnBackward"
                        android:layout_row="2"
                        android:layout_column="1"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:text="â†“ BCK"
                        android:textColor="@color/white"
                        android:background="@color/accent_primary"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_margin="5dp"/>

                    <!-- Empty Bottom-Right -->
                    <View
                        android:layout_row="2"
                        android:layout_column="2"
                        android:layout_width="0dp"
                        android:layout_height="60dp"/>

                </GridLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Servo Control Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âš™ï¸ Servo Control"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/accent_primary"
                    android:layout_marginBottom="16dp"/>

                <!-- Servo 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Servo 1 - Base"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tvServo1Value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="90Â°"
                            android:textColor="@color/accent_primary"
                            android:textSize="14sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <SeekBar
                        android:id="@+id/sliderServo1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:min="0"
                        android:max="180"
                        android:progress="90"/>
                </LinearLayout>

                <!-- Servo 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Servo 2 - Shoulder"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tvServo2Value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="90Â°"
                            android:textColor="@color/accent_primary"
                            android:textSize="14sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <SeekBar
                        android:id="@+id/sliderServo2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:min="0"
                        android:max="180"
                        android:progress="90"/>
                </LinearLayout>

                <!-- Servo 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Servo 3 - Gripper"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tvServo3Value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="90Â°"
                            android:textColor="@color/accent_primary"
                            android:textSize="14sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <SeekBar
                        android:id="@+id/sliderServo3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:min="0"
                        android:max="180"
                        android:progress="90"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
