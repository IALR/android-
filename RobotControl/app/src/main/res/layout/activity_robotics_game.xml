<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvGameTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/robotics_game_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="6dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/robotics_game_subtitle"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="16dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:backgroundTint="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/robotics_game_how_to_play_title"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvHowToPlay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/robotics_game_how_to_play"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingExtra="3dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:backgroundTint="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvGrid"
                    android:layout_width="match_parent"
                    android:layout_height="360dp"
                    android:nestedScrollingEnabled="false" />

                <TextView
                    android:id="@+id/tvLegend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/robotics_game_legend"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="12dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/robotics_game_commands"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btnLeft"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="@string/robotics_game_left"
                android:background="@drawable/button_secondary"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnForward"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="@string/robotics_game_forward"
                android:background="@drawable/button_primary"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnRight"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="@string/robotics_game_right"
                android:background="@drawable/button_secondary" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvProgram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/robotics_game_program_empty"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btnRun"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="@string/robotics_game_run"
                android:background="@drawable/button_primary"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnReset"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="@string/robotics_game_reset"
                android:background="@drawable/button_secondary" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
