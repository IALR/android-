<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text Styles -->
    <style name="TextAppearance.Display" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textSize">@dimen/text_display</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.Headline" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">@dimen/text_headline</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.Subtitle" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">@dimen/text_subtitle</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <style name="TextAppearance.Body" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.Caption" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/text_caption</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <style name="TextAppearance.Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/text_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
</resources>
